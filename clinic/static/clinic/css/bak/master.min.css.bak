html,body{height:100%;width:100%}.content{min-height:550px}.errorblock{margin:10px;background-color:#ef5350;border:1px solid #c62828;border-radius:20px;color:white;padding:3px 10px;text-align:center}.errorlist{list-style:none;padding:0;margin:.5em 0 -0.5em;text-align:right}.errorlist>li{border:1px solid #f44336;padding:3px 10px;width:fit-content;display:inline-block;margin:auto;border-radius:20px;background-color:#ef5350;color:#f1f1f1}.errorlist>li::after{content:'';position:absolute;margin-top:-.9em;right:1.9em;width:10px;height:10px;border-left:6px solid transparent;border-right:6px solid transparent;border-bottom:8px solid #ef5350}body#login{background-image:url("../img/med_bg.jpg");background-attachment:fixed;background-repeat:no-repeat;-webkit-background-size:cover;-moz-background-size:cover;-o-background-size:cover;background-size:cover}#login>.navbar{background-color:transparent!important}#login>.content{padding-top:20vh}#login>footer{position:absolute;bottom:0;width:100%}#login>footer #foot{background:linear-gradient(to bottom,transparent,white)!important;color:black!important;-webkit-text-stroke-width:.5px;-webkit-text-stroke-color:black}@media(max-width:992px){#search-form #search-bar{min-width:auto}#search-form{width:100%!important}}@media(min-width:1002px){#search-form #search-bar{min-width:500px}}#profile-block img{width:30px;height:auto;margin-right:.2em;border:1px solid #6c757d;background-color:#f1f1f1}#profile-block:hover img{background-color:#6c757d}#side-bar .item .title{margin:0;padding:5px 5px 0 5px}#side-bar .item p{margin:0;padding:0 5px 5px 5px;float:right}#side-bar button:focus{outline:0}